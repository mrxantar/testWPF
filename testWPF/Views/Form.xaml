<Page x:Class="testWPF.Views.Form"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testWPF.Views"
      xmlns:helpers="clr-namespace:testWPF.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Form">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Pics/iwt_op_form.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/iwt_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Cursor="Hand" Click="IWTButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <TextBlock x:Name="textBlock"
                                           Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FBB911"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                                    <Setter TargetName="textBlock" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.Content>Просмотреть PDF-файл</Button.Content>
                    <Button.Foreground>#FBB911</Button.Foreground>
                    <Button.BorderBrush>#FBB911</Button.BorderBrush>
                    <Button.Background>Transparent</Button.Background>
                    <Button.FontSize>12</Button.FontSize>
                    <Button.FontFamily>/Fonts/#Montserrat</Button.FontFamily>
                    <Button.FontWeight>SemiBold</Button.FontWeight>
                    <Button.BorderThickness>1</Button.BorderThickness>
                </Button>
            </Viewbox>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Pics/red_op_form.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/red_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Cursor="Hand" Click="REDButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <TextBlock x:Name="textBlock"
                                           Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FBB911"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                                    <Setter TargetName="textBlock" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.Content>Просмотреть PDF-файл</Button.Content>
                    <Button.Foreground>#FBB911</Button.Foreground>
                    <Button.BorderBrush>#FBB911</Button.BorderBrush>
                    <Button.Background>Transparent</Button.Background>
                    <Button.FontSize>12</Button.FontSize>
                    <Button.FontFamily>/Fonts/#Montserrat</Button.FontFamily>
                    <Button.FontWeight>SemiBold</Button.FontWeight>
                    <Button.BorderThickness>1</Button.BorderThickness>
                </Button>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.07*"/>
                    <RowDefinition Height="0.18*"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FFF3F3F3"
                               FontFamily="/Fonts/#Montserrat"
                               FontStyle="Italic"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="10,10,10,10">
                        <Run Text="ХОТИТЕ ПОСМОТРЕТЬ"/>
                        <LineBreak/>
                        <Run Text="КАТАЛОГ ПРОДУКЦИИ?"/>
                    </TextBlock>
                </Viewbox>
                
                <Viewbox Grid.Row="1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FF7D7D7D"
                               FontFamily="/Fonts/#Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="20,0,20,20">
                        <Run Text="Заполните форму и мы вышлем вам"/>
                        <LineBreak/>
                        <Run Text="его на электронную почту"/>
                    </TextBlock>
                </Viewbox>

                <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="2" Width="Auto" Grid.RowSpan="3">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Width="Auto">
                        <TextBox x:Name="NameBox" Height="45"
                                 helpers:Placeholder.Text="Фамилия, имя, отчество"
                                 Foreground="#7FFFFFFF" FontSize="16" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                                 BorderBrush="#7FFFFFFF" BorderThickness="0,0,0,2"
                                 Padding="10"
                                 Margin="0, 0, 0, 30"
                                 PreviewTextInput="NameBox_PreviewTextInput"
                                 DataObject.Pasting="NameBox_Pasting">
                            <TextBox.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                    <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                    <GradientStop Color="#7FFFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                        </TextBox>

                        <TextBox x:Name="NumberBox" Height="45"
                                 helpers:Placeholder.Text="Ваш телефон"
                                 Foreground="#7FFFFFFF" FontSize="16" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                                 BorderBrush="#7FFFFFFF" BorderThickness="0,0,0,2"
                                 Padding="10"
                                 Margin="0, 0, 0, 30"
                                 PreviewTextInput="NumberBox_PreviewTextInput"
                                 DataObject.Pasting="NumberBox_Pasting">
                            <TextBox.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                    <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                    <GradientStop Color="#7FFFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                        </TextBox>

                        <TextBox x:Name="EmailBox" Height="45"
                                 helpers:Placeholder.Text="E-mail"
                                 Foreground="#7FFFFFFF" FontSize="16" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                                 BorderBrush="#7FFFFFFF" BorderThickness="0,0,0,2"
                                 Padding="10"
                                 Margin="0, 0, 0, 30"
                                 >
                            <TextBox.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                    <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                    <GradientStop Color="#7FFFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Foreground="#7FFFFFFF"
                                   FontFamily="/Fonts/#Montserrat"
                                   TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Margin="0, 0, 0, 30"
                                   FontStyle="Italic">
                            <Run Text="Я даю согласие на обработку персональных данных и соглашаюсь с " FontSize="7"/>
                            <LineBreak/>
                            <Run Text="политикой конфиденциальности." FontSize="7"/>
                        </TextBlock>

                        <Button Background="#FBB911"
                                Foreground="#141310"
                                FontFamily="/Fonts/#Montserrat"
                                FontSize="18"
                                FontWeight="Bold"
                                Cursor="Hand"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0, 0, 0, 20" Click="ConfirmClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="45, 20, 45, 20">
                                        <TextBlock x:Name="textBlock"
                                                   Text="{TemplateBinding Content}"
                                                   FontSize="{TemplateBinding FontSize}"
                                                   FontFamily="{TemplateBinding FontFamily}"
                                                   FontWeight="{TemplateBinding FontWeight}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FFD700"/>
                                            <Setter TargetName="textBlock" Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>

                            <Button.Content>Подтвердить данные</Button.Content>
                        </Button>
                    </StackPanel>
                </Viewbox>

                <Viewbox Grid.Row="3">
                    <TextBlock x:Name="ErrorMessage"
                               Visibility="Collapsed"
                               Foreground="Red"
                               FontFamily="/Fonts/#Montserrat"
                               FontWeight="Light"
                               FontSize="10"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0, 10, 0, 10"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
    
</Page>
