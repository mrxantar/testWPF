<Page x:Class="testWPF.Views.ConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Image Source="/Pics/iwt_op_confirm.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/iwt_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Content="Просмотреть PDF-файл"
                        Foreground="#FBB911"
                        BorderBrush="#FBB911"
                        BorderThickness="1"
                        Background="Transparent"
                        FontSize="12"
                        FontFamily="/Fonts/#Montserrat"
                        FontWeight="SemiBold"
                        Grid.Row="2"
                        Cursor="Hand"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Pics/red_op_confirm.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/red_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Content="Просмотреть PDF-файл"
                        Foreground="#FBB911"
                        BorderBrush="#FBB911"
                        BorderThickness="1"
                        Background="Transparent"
                        FontSize="12"
                        FontFamily="/Fonts/#Montserrat"
                        FontWeight="SemiBold"
                        Grid.Row="2"
                        Cursor="Hand"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            
            <Viewbox Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FFF3F3F3"
                               FontFamily="/Fonts/#Montserrat"
                               FontStyle="Italic"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="10,10,10,10">
                        <Run Text="ПОДТВЕРДИТЕ"/>
                        <LineBreak/>
                        <Run Text="УКАЗАННЫЙ НОМЕР"/>
                        <LineBreak/>
                        <Run Text="ТЕЛЕФОНА"/>
                    </TextBlock>

                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FF7D7D7D"
                               FontFamily="/Fonts/#Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="20,0,20,20"
                               FontSize="7">
                        <Run Text="Введите код из смс"/>
                    </TextBlock>
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <TextBox Height="12" MinWidth="12"
                             Foreground="#7FFFFFFF" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                             BorderBrush="#7FFFFFFF" BorderThickness="0.1,0.1,0.1,0.1"
                             Margin="0, 0, 1, 0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                <GradientStop Color="#7FFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>

                    <TextBox Height="12" MinWidth="12"
                             Foreground="#7FFFFFFF" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                             BorderBrush="#7FFFFFFF" BorderThickness="0.1,0.1,0.1,0.1"
                             Margin="0, 0, 1, 0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                <GradientStop Color="#7FFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>

                    <TextBox Height="12" MinWidth="12"
                             Foreground="#7FFFFFFF" FontFamily="/Fonts/#Montserrat" FontStyle="Italic"
                             BorderBrush="#7FFFFFFF" BorderThickness="0.1,0.1,0.1,0.1"
                             Margin="0, 0, 0, 0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                <GradientStop Color="#7FFFFFFF" Offset="0"/>
                                <GradientStop Color="#7FFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="4">
                <Button Padding="45, 20, 45, 20"
                        Background="#FBB911"
                        Foreground="#141310"
                        FontFamily="/Fonts/#Montserrat"
                        FontSize="18"
                        FontWeight="Bold"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 0" Click="ConfirmCode">
                    Подтвердить номер
                </Button>
            </Viewbox>

            <Viewbox Grid.Row="6">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#FF7D7D7D"
                           FontFamily="/Fonts/#Montserrat"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="20,0,20,20"
                           FontSize="12" 
                           TextDecorations="Underline">
                    <Run Text="Прислать код повторно"/>
                </TextBlock>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
