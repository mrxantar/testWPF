<Page x:Class="testWPF.Views.FinalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinalPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Pics/iwt_op_final.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/iwt_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Content="Просмотреть PDF-файл"
                Foreground="#FBB911"
                BorderBrush="#FBB911"
                BorderThickness="1"
                Background="Transparent"
                FontSize="12"
                FontFamily="/Fonts/#Montserrat"
                FontWeight="SemiBold"
                Grid.Row="2"
                Cursor="Hand"/>
            </Viewbox>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/Pics/red_op_final.png" Grid.Row="0" Grid.RowSpan="3" Stretch="Fill"/>
            <Image Source="/Logos/red_small.png" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center"/>
            <Viewbox Grid.Row="2" Margin="10, 0, 10, 25">
                <Button Width="200" Height="50" Content="Просмотреть PDF-файл"
                Foreground="#FBB911"
                BorderBrush="#FBB911"
                BorderThickness="1"
                Background="Transparent"
                FontSize="12"
                FontFamily="/Fonts/#Montserrat"
                FontWeight="SemiBold"
                Grid.Row="2"
                Cursor="Hand"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="1">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FFF3F3F3"
                               FontFamily="/Fonts/#Montserrat"
                               FontStyle="Italic"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="30">
                        <Run Text="ФАЙЛ УСПЕШНО"/>
                        <LineBreak/>
                        <Run Text="ОТПРАВЛЕН"/>
                    </TextBlock>

                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FF7D7D7D"
                               FontFamily="/Fonts/#Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="15"
                               Margin="0, 10, 0, 0">
                        <Run Text="Также вы можете скачать каталог себе на"/>
                        <LineBreak/>
                        <Run Text="телефон, отсканировав этот QR-код"/>
                    </TextBlock>
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="0, 0, 150, 0">
                        <Image Source="/QRs/qr_iwt.png"/>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#FF7D7D7D"
                                   FontFamily="/Fonts/#Montserrat"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="70"
                                   Margin="0, 10, 0, 0">
                            <Run Text="IWT"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Image Source="/QRs/qr_red.png"/>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#FF7D7D7D"
                                   FontFamily="/Fonts/#Montserrat"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="70"
                                   Margin="0, 10, 0, 0">
                            <Run Text="RED"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
